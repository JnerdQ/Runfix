{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "noEmitOnError": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false, // Modificado a 'false'
    "noUnusedParameters": false, // Modificado a 'false'
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "."
  },
  "include": ["src", "src/pages/.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
